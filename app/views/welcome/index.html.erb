<div class="row">
    <h2>
        Hello cutie, where are you looking to park your precious car?
    </h2>
</div>

<!-- This form is not supposed to post anything
    Instead, we use jquery to intercept, perform geocode search
    Then update the map below to show available listings
    For more info look for js/search_location.js
-->
<form method="post" id="search_location_form" action="" >
    <div class="row">
        <label for="location">Location:</label>
        <input class="form-control" type="text" id="location_input" name="location" value="90024"></input>
        <input type="hidden" id="longitude" name="longitude"></input>
        <input type="hidden" id="latitude" name="latitude"></input>
    </div>

    <div class="row">
        <div class="col-md-3">
            <label for="start_time">Start time:</label>
            <input class="form-control" type="text" id="start_time" name="start_time"></input>
        </div>
        <div class="col-md-3">
            <label for="end_time">End time:</label>
            <input class="form-control" type="text" id="end_time" name="end_time"></input>
        </div>
    </div>
    <br/>

    <div class="row">
        <button type="submit" class="btn btn-primary btn-large">Search</button>
    </div>
</form>

<div id="map" style="height: 500px;"></div>

<script>
    $("#start_time").datepicker();
    $("#end_time").datepicker();
</script>

<script src="/js/search_location.js"></script>

